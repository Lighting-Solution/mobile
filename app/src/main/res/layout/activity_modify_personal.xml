<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".p_contect.AddPersonal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/backButton_1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:gravity="start"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="연락처 추가" />

        <TextView
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:gravity="right"
            android:text="확인" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/personalContactName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="이름" />

                <EditText
                    android:id="@+id/personalContactNickName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="별명" />

                <EditText
                    android:id="@+id/departmentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="부서" />

                <EditText
                    android:id="@+id/positionName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="직급" />

                <EditText
                    android:id="@+id/personalContactMP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="전화번호"
                    android:inputType="phone" />

                <EditText
                    android:id="@+id/personalContactEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="이메일"
                    android:inputType="textWebEmailAddress" />

                <EditText
                    android:id="@+id/personalContactBirthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="생일"
                    android:inputType="date" />



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="메모" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:importantForAutofill="no">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/personalContactMemo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="회사 선택" />
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ViewStub
                    android:id="@+id/companyInfoStub"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inflatedId="@+id/companyInfoLayout"
                    android:layout="@layout/company_info_layout"
                    android:visibility="visible"/>
            </LinearLayout>

            <Button
                android:id="@+id/deleteContactButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="연락처 삭제"
                app:cornerRadius="5dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>